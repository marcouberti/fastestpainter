<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_dialog_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aa000000" >

    <ImageView
        android:id="@+id/marketingImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:src="@drawable/marketing" />

    <Button
        android:id="@+id/no"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignRight="@+id/marketingImage"
        android:layout_alignTop="@+id/marketingImage"
        android:background="@drawable/btn_no" />

</RelativeLayout>