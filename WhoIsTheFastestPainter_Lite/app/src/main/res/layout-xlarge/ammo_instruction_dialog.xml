<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
   		android:id="@+id/frameunlockedsection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >	
			<RelativeLayout
			              android:orientation="vertical"
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"
			              android:layout_gravity="center_horizontal"
			              android:gravity="center_horizontal"
			              android:minWidth="250dp"
			              >
			              <ImageView android:id="@+id/instructionBgImage"
					               android:layout_width="200dp"
					               android:layout_height="200dp"
					               android:src="@drawable/trickbg"
					               />
			              <ImageView android:id="@+id/instructionImage"
					               android:layout_width="200dp"
					               android:layout_height="200dp"
					               android:src="@drawable/transparent"
					               />
              </RelativeLayout>
              <LinearLayout
			              android:orientation="vertical"
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"
			              android:layout_gravity="bottom"
			              android:gravity="bottom"
			              >
			              <ImageView android:id="@+id/addMoreProbability"
					               android:layout_width="90dp"
					               android:layout_height="90dp"
					               android:src="@drawable/plus_dialog"
					               />
              </LinearLayout>
</FrameLayout>