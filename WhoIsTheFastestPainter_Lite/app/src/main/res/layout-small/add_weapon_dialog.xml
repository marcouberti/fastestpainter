<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_root"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:gravity="center_horizontal"
              >
    <ImageView 
              android:layout_width="120dip"
              android:layout_height="120dip"
              android:textColor="#000"
              android:gravity="center"
              android:src="@drawable/coins"
              />
    <LinearLayout
	              android:orientation="horizontal"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:gravity="center_horizontal"
	              >
	              <LinearLayout
	              android:orientation="horizontal"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:gravity="center_vertical"
	              >
					    <TextView android:id="@+id/textaddammo"
					               android:layout_width="wrap_content"
					               android:layout_height="wrap_content"
					               android:textAppearance="@style/ExitText_Bianco"
					               android:text="@string/addprobabilitytext"
					               android:gravity="center_horizontal"
					               android:layout_gravity="center_horizontal"
					               />
		          </LinearLayout>  
    </LinearLayout>           
    
   
    
    <LinearLayout
              android:id="@+id/dialogbuttoncontainer"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:gravity="center_horizontal"
              >
        
	    <ImageView android:id="@+id/yesButton"
	              android:layout_width="50dip"
	              android:layout_height="50dip"
	              android:textColor="#000"
	              android:gravity="center"
	              android:src="@drawable/btn_yes"
	              />
	    <!-- ### IMMAGINE DI SPAZIAMENTO -->
        <ImageView 
		           android:layout_width="50dip"
		           android:layout_height="50dip"
		           android:textColor="#000"
		           android:gravity="center"
		           android:src="@drawable/transparent"
		           />
	    <ImageView android:id="@+id/noButton"
	              android:layout_width="50dip"
	              android:layout_height="50dip"
	              android:textColor="#000"
	              android:gravity="center"
	              android:src="@drawable/btn_no"
	              />
    </LinearLayout>
</LinearLayout>