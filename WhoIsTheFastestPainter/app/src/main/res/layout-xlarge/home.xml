<?xml version="1.0" encoding="utf-8"?>
<!-- android:background="@drawable/bg1" -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/homelayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="0dip"
        android:background="@drawable/bg1"
        >
        <RelativeLayout
        	android:layout_width="fill_parent"
		    android:layout_height="fill_parent">
	        <ImageView android:id="@+id/roteableimage"
	             android:layout_width="100dip"
	             android:layout_height="100dip"
	             />
	        <ImageView android:id="@+id/roteableimage2"
	             android:layout_width="100dip"
	             android:layout_height="100dip"
	             />
	        <ImageView android:id="@+id/roteableimage3"
	             android:layout_width="100dip"
	             android:layout_height="100dip"
	             />
	        <ImageView android:id="@+id/roteableimage4"
	             android:layout_width="100dip"
	             android:layout_height="100dip"
	             />
	        <ImageView android:id="@+id/roteableimage5"
	             android:layout_width="100dip"
	             android:layout_height="100dip"
	             />
        </RelativeLayout>
        <LinearLayout
		    android:id="@+id/mascottebottom"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="vertical"
		    android:gravity="bottom"
		    android:layout_gravity="bottom"
		    >
		    <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
					<LinearLayout
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:orientation="horizontal"
					    android:gravity="right"
					    android:layout_gravity="right"
					    >
		                <ImageView android:id="@+id/mascotteimage"
									               android:layout_width="250dp"
									               android:layout_height="250dp"
									               android:src="@drawable/homemascotte"
									               />
					</LinearLayout>
            </LinearLayout>
		</LinearLayout>
        <LinearLayout
		    android:id="@+id/menulayoutbuttons"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="horizontal"
		    android:gravity="center_horizontal"
		    android:layout_gravity="center_horizontal"
		    >
		    <LinearLayout
		    android:id="@+id/menulayouthor"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:orientation="vertical"
		    android:gravity="center_vertical"
		    >
		    <ImageView android:id="@+id/logoimage"
					               android:layout_width="wrap_content"
					               android:layout_height="wrap_content"
					               android:src="@drawable/logo"
					               android:layout_gravity="center_horizontal"
			              		   android:gravity="center_horizontal"
					               />
			<TextView android:id="@+id/textuno"
			               android:layout_width="wrap_content"
			               android:layout_height="wrap_content"
			               android:padding="1dp"
			               android:text="@string/continua"
			               android:textAppearance="@style/HomeText_Azzurro"
			               android:layout_gravity="center_horizontal"
			               android:gravity="center_horizontal"
			               />
			<LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:gravity="center_horizontal"
			    android:layout_gravity="center_horizontal"
			    >
			    <LinearLayout
				    android:layout_width="wrap_content"
				    android:layout_height="fill_parent"
				    android:orientation="vertical"
				    android:gravity="center_vertical"
				    android:layout_gravity="center_vertical"
				    >
	            	<TextView android:id="@+id/textcinque"
				               android:layout_width="wrap_content"
				               android:layout_height="wrap_content"
				               android:padding="1dp"
				               android:text="@string/armi"
				               android:textAppearance="@style/HomeText_Azzurro"
				               />
                </LinearLayout>
				<LinearLayout
				    android:layout_width="wrap_content"
				    android:layout_height="fill_parent"
				    android:orientation="vertical"
				    android:gravity="center_vertical"
				    android:layout_gravity="center_vertical"
				    >
				    <ImageView android:id="@+id/puntoimage"
				               android:layout_width="80dp"
				               android:layout_height="80dp"
				               android:src="@drawable/punto"
				               />	
		        </LinearLayout>
			</LinearLayout>
			               <!-- 
			<TextView android:id="@+id/textdue"
			               android:layout_width="wrap_content"
			               android:layout_height="wrap_content"
			               android:padding="1dp"
			               android:text="@string/nuovapartita"
			               android:textAppearance="@style/HomeText_Azzurro"
			               android:layout_gravity="center_horizontal"
			               android:gravity="center_horizontal"
			               />
			                -->
			<TextView android:id="@+id/texttre"
			               android:layout_width="wrap_content"
			               android:layout_height="wrap_content"
			               android:padding="1dp"
			               android:text="@string/atelier"
			               android:textAppearance="@style/HomeText_Azzurro"
			               android:layout_gravity="center_horizontal"
			               android:gravity="center_horizontal"
			               />
	      
		</LinearLayout>
		</LinearLayout>

		<LinearLayout
		    android:id="@+id/invenktionbottom"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="vertical"
		    android:gravity="bottom"
		    android:layout_gravity="bottom"
		    >
		    <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
				    <LinearLayout
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    >
					    <ImageView android:id="@+id/soundimage"
								               android:layout_width="80dp"
								               android:layout_height="80dp"
								               android:src="@drawable/soundon"
								               />
						<ImageView android:id="@+id/creditsimage"
								               android:layout_width="80dp"
								               android:layout_height="80dp"
								               android:src="@drawable/credits"
								               />
					</LinearLayout>
					<!--  
					<LinearLayout
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:orientation="horizontal"
					    android:gravity="right"
					    android:layout_gravity="right"
					    >
		                <ImageView android:id="@+id/creditsimage"
								               android:layout_width="40dp"
								               android:layout_height="40dp"
								               android:src="@drawable/credits"
								               />
					</LinearLayout>
					-->
            </LinearLayout>
		</LinearLayout>

</FrameLayout>